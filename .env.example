# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/english_learning_db"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Security Configuration
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"
INTERNAL_API_KEY="your-internal-api-key-for-module-communication-32-chars"

# OpenAI Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"

# WhatsApp Business API Configuration
WHATSAPP_API_URL="https://graph.facebook.com/v18.0/YOUR_PHONE_NUMBER_ID"
WHATSAPP_ACCESS_TOKEN="your-whatsapp-access-token"
WHATSAPP_VERIFY_TOKEN="your-webhook-verify-token"

# Server Configuration
PORT=3000
NODE_ENV=development
API_BASE_URL="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"

# Minio/S3 Configuration
AWS_S3_BUCKET=your-minio-bucket-name
AWS_ACCESS_KEY_ID=your-minio-access-key
AWS_SECRET_ACCESS_KEY=your-minio-secret-key
AWS_REGION=us-east-1 # Puede ser cualquier valor, pero es requerido

# Estas son las variables clave para Minio
S3_ENDPOINT=http://localhost:9000 # O la URL donde tu Minio es accesible
S3_FORCE_PATH_STYLE=true

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Audio Processing Configuration
MAX_AUDIO_FILE_SIZE_MB=10
SUPPORTED_AUDIO_FORMATS="mp3,wav,ogg,m4a"

# External API Timeouts (in milliseconds)
OPENAI_API_TIMEOUT=60000
TELEGRAM_API_TIMEOUT=10000
WHATSAPP_API_TIMEOUT=10000

# Audio Processing & Evaluation Logic
EVALUATOR_MIN_WORD_COUNT=5

# Conversational AI
CHAT_HISTORY_WINDOW_SIZE=10
